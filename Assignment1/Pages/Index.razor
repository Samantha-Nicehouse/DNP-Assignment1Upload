@page "/"
@using Assignment1.Data
@using Assignment1.Models
@inject IAdultService AdultService
<h3>Adults:</h3>
@if (adults == null)
{
    <p><em>Loading...</em></p>
}
else if (!adults.Any())
{
    <p><em>No adult items exist. Please add some.</em></p>
}
else
{
    <div class="form-group">
        <label>Search</label>
        <input type="text" placeholder="user name" @bind-value="searchinput" />
    </div>
    <div class="form-group">
        <label>Password</label>
        <input type="password" placeholder="password" @bind-value="filter" />
    </div>
    <a href="" @onclick="PerformSearch">
        Search
    </a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Hair Color</th>
                <th>Eye Color</th>
                <th>Age</th>
                <th>Height</th>
                <th>Weight</th>
                <th>Sex</th>
                <th>Job</th>

            </tr>
        </thead>
        <tbody>
            @if (searchinput.Equals(""))
            {
                DisplayAdults(adults);
            }
        </tbody>
    </table>
}

@code {
    private IList<Adult> adults;
    private String searchinput = "";
    private String filter;

    protected override async Task OnInitializedAsync()
    {
        await Task.Run(() => adults = AdultService.GetAdults());
        await Task.Run(() => searchinput = "");

    }

    public void PerformSearch()
    {

    }
}
@{
    void DisplayAdults(IList<Adult> adultsToDisplay)
    {
        @foreach (var item in adultsToDisplay)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.HairColor</td>
                <td>@item.EyeColor</td>
                <td>@item.Age</td>
                <td>@item.Height</td>
                <td>@item.Weight</td>
                <td>@item.Sex</td>
                <td>@item.JobTitle</td>
            </tr>
        }
    }
}