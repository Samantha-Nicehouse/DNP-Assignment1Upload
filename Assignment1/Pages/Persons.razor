@page "/Persons"
@using Assignment1.Data
@using Assignment1.Models
@using global::Models
@inject IPersonService PersonService
<h3>Persons</h3>
@if (persons == null)
{
    <p><em>Loading...</em></p>
}
else if (!persons.Any())
{
    <p><em>No person items exist. Please add some.</em></p>
} else
{
    <table class="table">
        <thead>
        <tr>
             <th>Id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Hair Color</th>
            <th>Eye Color</th>
            <th>Age</th>
            <th>Height</th>
            <th>Weight</th>
            <th>Sex</th>

        </tr>
        </thead>
        <tbody>
            @foreach(var item in persons)
            {
            <tr>
                <td>@item.Id</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.HairColor</td>
                <td>@item.EyeColor</td>
                <td>@item.Age</td>
                    <td>@item.Height</td>
                <td>@item.Weight</td>
                  <td>@item.Sex</td>
               
            </tr>
            }
        </tbody>
    </table>
}

@code {
    private IList<Person> persons;

    protected override async Task OnInitializedAsync()
    {
        await Task.Run(() => persons = PersonService.GetPersons());
       
    }

}